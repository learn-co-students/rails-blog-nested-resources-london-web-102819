<p id="notice"><%= notice %></p>

<h3>Title:</h3>
<%= @post.name %>
<h3>Content:</h3>
<%= @post.content %>
<h3>Tags:</h3>
<ul>
  <% @post.tags.each do |tag| %>
  <li><%= tag.name %></li>
  <% end %>
</ul>

<%= form_for(@comment) do |f| %>

  <%= f.label :content %>
  <%= f.text_area :content %>

  <%= f.hidden_field :post_id, value: @post.id %>
  
  <%= f.submit %>

<% end %>

<h3>Comments:</h3>


<% @post.comments.each do |comment| %>
  <p><%= comment.content %><p>
<% end %>




<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
